{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://project-chimera.local/schemas/vigil/correlation_rule.json",
  "title": "VIGIL Correlation Rule",
  "type": "object",
  "additionalProperties": false,
  "required": ["rules"],
  "properties": {
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/rule" }
    }
  },
  "$defs": {
    "timeWindow": {
      "type": "string",
      "pattern": "^[0-9]+(s|m|h|d)$"
    },
    "severityLabel": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "sequence", "severity", "confidence"],
      "properties": {
        "id": { "type": "string", "minLength": 3 },
        "name": { "type": "string", "minLength": 3 },
        "description": { "type": "string" },

        "enabled": { "type": "boolean", "default": true },

        "severity": { "$ref": "#/$defs/severityLabel" },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },

        "max_span": { "$ref": "#/$defs/timeWindow" },

        "sequence": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/step" }
        }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["event_type"],
      "properties": {
        "event_type": { "type": "string", "minLength": 1 },

        "within": { "$ref": "#/$defs/timeWindow" },

        "same": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "entities.src_ip",
              "entities.dst_ip",
              "entities.ip",
              "entities.domain",
              "entities.url",
              "entities.user",
              "entities.host",
              "entities.email_from",
              "entities.email_to"
            ]
          }
        },

        "where": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "min_confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
            "min_severity": { "type": "integer", "minimum": 1, "maximum": 10 },
            "tag_any": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
